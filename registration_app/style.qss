QWidget {
    background-color: #2c2f33;
    color: white;
    font-family: Segoe UI;
    font-size: 14px;
}

QLineEdit {
    background-color: #23272a;
    border: 1px solid #99aab5;
    border-radius: 5px;
    padding: 5px;
    color: white;
}

QLineEdit:focus {
    border: 1px solid #7289da;
}

QPushButton {
    background-color: #7289da;
    border: none;
    border-radius: 5px;
    padding: 8px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #5b6eae;
}
